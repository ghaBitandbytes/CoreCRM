<!-- Header with Navbar + Reminders -->
<header class="bg-gradient-to-r from-slate-800 to-teal-500">
  <div class="max-w-7xl mx-auto px-4 py-3 flex flex-col md:flex-row items-center justify-between">
    
    <!-- Logo + Tagline -->
    <div class="flex flex-col md:flex-row md:items-center space-y-0 md:space-y-0 md:space-x-5">
      <span class="text-2xl font-bold tracking-tight text-black">üåê Core CRM</span>
      
    </div>

   <!-- Navigation -->
<nav class="max-w-1xl flex flex-col md:flex-row gap-3  mt-2 md:space-y-0 md:space-x-0 "> 
  <%= link_to "Home", root_path, class: "text-black hover:text-purple-700 transition" %> 
  <%= link_to "Features", "#features", class: "text-black hover:text-purple-700 transition" %>
  <%= link_to "Flexibility", "#flexibility", class: "text-black hover:text-purple-700 transition" %>
  <%= link_to "Pricing", "#pricing", class: "text-black hover:text-purple-700 transition" %>
  <%= link_to "FAQ", "#faq", class: "text-black hover:text-purple-700 transition" %>
  <%= link_to "Blog", "#", class: "text-black hover:text-purple-700 transition" %>
  <%= link_to "Leads", leads_path, class: "text-black hover:text-purple-700 transition" %>
  <% unless user_signed_in? %>
    <li class="list-none nav-item ms-lg-2 mt-2 mt-lg-0">
  <%= link_to "Get Started <i class='fas fa-arrow-right ms-2'></i>".html_safe, new_user_registration_path, class: "btn btn-cta" %>
</li>

  <% else %>
<%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-outline-dark" %>
  <% end %>
</nav>
</div>


  <% if false %>
  <!-- Reminder Bell -->
  <% if user_signed_in? %>
    <% upcoming_reminders = current_user.reminders.upcoming %>
    <div class="relative group ml-4">
      <!-- Bell Icon -->
      <div class="cursor-pointer relative group-hover:animate-ring">
        <svg xmlns="http://www.w3.org/2000/svg"
            fill="none" viewBox="0 0 24 24"
            stroke-width="1.5" stroke="currentColor"
            class="w-6 h-6 text-purple-900">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M14.5 19.5a2.5 2.5 0 01-5 0M4.5 8.25a7.5 7.5 0 1115 0c0 3.75 1.5 5.25 1.5 5.25H3s1.5-1.5 1.5-5.25z" />
        </svg>

        <% if upcoming_reminders.any? %>
          <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs font-bold rounded-full px-1.5 py-0.5">
            <%= upcoming_reminders.count %>
          </span>
        <% end %>
      </div>

      <!-- Dropdown -->
      <div class="absolute right-0 z-50 mt-2 w-64 bg-white border border-gray-200 rounded shadow-md hidden group-hover:block">
        <div class="p-3">
          <% if upcoming_reminders.any? %>
            <p class="font-semibold text-sm mb-2">Upcoming Reminders</p>
            <ul class="text-sm space-y-1 max-h-48 overflow-y-auto">
              <% upcoming_reminders.each do |reminder| %>
                <li class="border-b pb-1">
                  <%= link_to reminder.title, lead_path(reminder.lead), class: "text-blue-700 hover:underline" %><br>
                  <span class="text-gray-500 text-xs"><%= reminder.remind_at.strftime("%I:%M %p, %b %d") %></span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-gray-500">No upcoming reminders</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


  </div>
</header>
