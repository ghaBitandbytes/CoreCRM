<div class="lead-dashboard">
  <!-- Header Section -->
  <div class="dashboard-header animate__animated animate__fadeIn" style="background: linear-gradient(135deg, var(--primary-color), var(--dark-color));">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="display-5 fw-bold text-white mb-2">
            <i class="fas fa-user-tie me-3"></i>Lead Details
          </h1>
          <div class="d-flex align-items-center">
            <span class="badge bg-white text-primary me-3">
              <i class="fas fa-id-card me-1"></i> ID: <%= @lead.id %>
            </span>
            <span class="badge" style="background-color: var(--accent-color);">
              <%= @lead.status %>
            </span>
          </div>
        </div>
        <div class="col-md-4 text-md-end">
          <%= link_to edit_lead_path(@lead), class: "btn btn-light btn-sm me-2" do %>
            <i class="fas fa-edit me-1"></i> Edit Lead
          <% end %>
          <%= link_to leads_path, class: "btn btn-outline-light btn-sm" do %>
            <i class="fas fa-arrow-left me-1"></i> Back to Leads
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container py-4 animate__animated animate__fadeInUp">
    <div class="row">
      <!-- Lead Information Card -->
      
      <div class="col-lg-6 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-header text-white" style="background-color: var(--primary-color);">
            <h5 class="card-title mb-0">
              <i class="fas fa-info-circle me-2"></i>Lead Information
            </h5>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-6">
                <div class="lead-detail">
                  <h6 class="text-muted mb-1"><i class="fas fa-user me-2" style="color: var(--accent-color);"></i>Name</h6>
                  <p class="fs-5 fw-bold"><%= @lead.name %></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="lead-detail">
                  <h6 class="text-muted mb-1"><i class="fas fa-envelope me-2" style="color: var(--accent-color);"></i>Email</h6>
                  <p class="fs-5"><%= @lead.email %></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="lead-detail">
                  <h6 class="text-muted mb-1"><i class="fas fa-phone me-2" style="color: var(--accent-color);"></i>Phone</h6>
                  <p class="fs-5"><%= @lead.phone %></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="lead-detail">
                  <h6 class="text-muted mb-1"><i class="fas fa-building me-2" style="color: var(--accent-color);"></i>Company</h6>
                  <p class="fs-5"><%= @lead.company || "N/A" %></p>
                </div>
              </div>
              <div class="col-md-6">
  <div class="lead-detail">
    <h6 class="text-muted mb-1">
      <i class="fas fa-building me-2" style="color: var(--accent-color);"></i>Company
    </h6>
    
    <% if @lead.status == "qualified" && @lead.company.present? %>
      <p class="fs-5 fw-bold">
        <%= link_to @lead.company.name, company_path(@lead.company), class: "text-decoration-none" %>
      </p>
    <% elsif @lead.status == "qualified" && @lead.company.blank? && current_user.role == "sales_manager" %>
      <p class="text-muted">Not assigned</p>
      <%= link_to "Create Company", new_company_path(lead_id: @lead.id), class: "btn btn-sm btn-outline-primary mt-2" %>
    <% else %>
      <p class="fs-5 text-muted">N/A</p>
    <% end %>
  </div>
</div>

              <div class="col-md-6">
                <div class="lead-detail">
                  <h6 class="text-muted mb-1"><i class="fas fa-tags me-2" style="color: var(--accent-color);"></i>Tags</h6>
                  <div class="d-flex flex-wrap gap-2">
                    <% if @lead.tags.present? %>
                      <% @lead.tags.split(',').each do |tag| %>
                        <span class="badge" style="background-color: var(--light-color); color: var(--dark-color);"><%= tag.strip %></span>
                      <% end %>
                    <% else %>
                      <span class="text-muted">No tags</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      
      <!-- Reminders Section -->
      <div class="col-lg-6 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-header text-white" style="background-color: var(--primary-color);">
            <h5 class="card-title mb-0">
              <i class="fas fa-bell me-2"></i>Reminders & Follow-ups
            </h5>
          </div>
          <div class="card-body">
            <!-- Reminder Form -->
            <div class="reminder-form mb-4 p-3 rounded" style="background-color: var(--light-color);">
              <%= form_with(model: [@lead, Reminder.new], local: true) do |f| %>
                <div class="mb-3">
                  <%= f.label :title, class: "form-label fw-bold" %>
                  <%= f.text_field :title, class: "form-control", placeholder: "Follow-up call, Send proposal, etc." %>
                </div>

                <div class="row g-3">
                  <div class="col-md-6">
                    <%= f.label :remind_at, "Date", class: "form-label fw-bold" %>
                    <%= f.date_field :remind_at, class: "form-control" %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :remind_at, "Time", class: "form-label fw-bold" %>
                    <%= f.time_field :remind_at, class: "form-control" %>
                  </div>
                </div>

                <div class="mb-3 mt-3">
                  <%= f.label :notes, class: "form-label fw-bold" %>
                  <%= f.text_area :notes, rows: 2, class: "form-control", placeholder: "Additional notes..." %>
                </div>

                <%= f.hidden_field :user_id, value: current_user.id %>

                <div class="text-end">
                  <%= f.submit "Add Reminder", class: "btn", style: "background-color: var(--secondary-color); border-color: var(--secondary-color); color: white;" %>
                </div>
              <% end %>
            </div>

            <!-- Existing Reminders -->
            <h6 class="fw-bold mb-3"><i class="fas fa-history me-2" style="color: var(--accent-color);"></i>Upcoming Reminders</h6>
            <% if @lead.reminders.any? %>
              <div class="reminders-list">
                <% @lead.reminders.order(:remind_at).each do |reminder| %>
                  <div class="reminder-item card mb-2 border-0 shadow-sm">
                    <div class="card-body p-3">
                      <div class="d-flex justify-content-between">
                        <div>
                          <% if reminder.remind_at.present? %>
  <p class="mb-1 text-muted">
    <i class="far fa-clock me-1"></i>
    <%= reminder.remind_at.strftime("%b %d, %Y at %I:%M %p") %>
  </p>
<% end %>

                        </div>
                        <div class="dropdown">
  <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
    <i class="fas fa-ellipsis-v"></i>
  </button>
  <ul class="dropdown-menu dropdown-menu-end">
    <li><%= link_to "Edit", edit_lead_reminder_path(@lead, reminder), class: "dropdown-item" %></li>
    <li><%= link_to "Delete", lead_reminder_path(@lead, reminder), method: :delete, data: { confirm: "Are you sure?" }, class: "dropdown-item text-danger" %></li>
  </ul>
</div>


                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-4 text-muted">
                <i class="far fa-bell-slash fa-2x mb-2"></i>
                <p>No reminders scheduled</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    

    <!-- Additional Analysis Section -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-header text-white" style="background-color: var(--primary-color);">
            <h5 class="card-title mb-0">
              <i class="fas fa-chart-line me-2"></i>Lead Analysis
            </h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <div class="analysis-card text-center p-3">
                  <div class="icon-circle mx-auto mb-3" style="background-color: var(--accent-color);">
                    <i class="fas fa-phone-volume fa-lg text-white"></i>
                  </div>
                  <h5 class="fw-bold">Contact History</h5>
                  <p class="text-muted">Last contacted: 2 days ago</p>
                  <button class="btn btn-outline-primary btn-sm">View History</button>
                </div>
              </div>
              <div class="col-md-4">
                <div class="analysis-card text-center p-3">
                  <div class="icon-circle mx-auto mb-3" style="background-color: var(--secondary-color);">
                    <i class="fas fa-tasks fa-lg text-white"></i>
                  </div>
                  <h5 class="fw-bold">Next Steps</h5>
                  <p class="text-muted">Send proposal by Friday</p>
                  <button class="btn btn-outline-primary btn-sm">Add Action</button>
                </div>
              </div>
              <div class="col-md-4">
                <div class="analysis-card text-center p-3">
                  <div class="icon-circle mx-auto mb-3" style="background-color: var(--secondary-color);">
                    <i class="fas fa-percentage fa-lg text-white"></i>
                  </div>
                  <h5 class="fw-bold">Conversion Chance</h5>
                  <div class="progress mt-2 mb-3" style="height: 10px;">
                    <div class="progress-bar" role="progressbar" style="width: 65%; background-color: var(--secondary-color);" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                  <button class="btn btn-outline-primary btn-sm">Update Probability</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  :root {
    --primary-color: #2c3e50;
    --secondary-color: #1abc9c;
    --accent-color: #3498db;
    --dark-color: #34495e;
    --light-color: #ecf0f1;
  }

  /* Custom Styles */
  .lead-dashboard {
    background-color: var(--light-color);
    min-height: 100vh;
  }
  
  .dashboard-header {
    color: white;
    padding: 2rem 0;
    margin-bottom: 2rem;
    box-shadow: 0 4px 20px rgba(44, 62, 80, 0.3);
  }
  
  .card {
    border: none;
    border-radius: 10px;
    transition: all 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1) !important;
  }
  
  .card-header {
    border-radius: 10px 10px 0 0 !important;
  }
  
  .lead-detail {
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.2s;
  }
  
  .lead-detail:hover {
    background-color: rgba(236, 240, 241, 0.5);
  }
  
  .reminder-item {
    transition: all 0.2s;
  }
  
  .reminder-item:hover {
    background-color: rgba(236, 240, 241, 0.5);
  }
  
  .icon-circle {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .analysis-card {
    border-radius: 10px;
    height: 100%;
    transition: all 0.3s;
  }
  
  .analysis-card:hover {
    background-color: rgba(236, 240, 241, 0.5);
    transform: translateY(-3px);
  }
  
  .btn-outline-primary {
    color: var(--accent-color);
    border-color: var(--accent-color);
  }
  
  .btn-outline-primary:hover {
    background-color: var(--accent-color);
    color: white;
  }
</style>

<!-- Required Libraries -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

