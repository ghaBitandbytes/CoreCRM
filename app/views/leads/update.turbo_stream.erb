<%= turbo_stream.replace "lead_note_#{@lead.id}" do %>
  <div class="mt-3">
    <div class="flex items-center text-xs text-gray-500 mb-1">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <span>Internal Notes</span>
    </div>
    <div class="bg-gray-50 rounded-lg p-3 text-sm text-gray-700 min-h-[60px] transition-all duration-200 hover:bg-gray-100">
      <% if @lead.notes.present? %>
        <%= truncate(@lead.notes, length: 120) %>
      <% else %>
        <span class="text-gray-400 italic">No notes yet</span>
      <% end %>
    </div>
  </div>
<% end %>

<%= turbo_stream.append "modal-close-scripts" do %>
  <script>
    const modal = bootstrap.Modal.getInstance(document.getElementById("editNoteModal-<%= @lead.id %>"));
    if (modal) modal.hide();
  </script>
<% end %>
