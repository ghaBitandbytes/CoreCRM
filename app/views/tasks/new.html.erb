<h1 class="text-2xl font-bold mb-4">New Task for Deal: <%= @taskable.title %></h1>

<%= link_to "â¬… Back to Deal", deal_path(@taskable), class: "text-blue-600 underline mb-4 inline-block" %>

<div class="bg-white p-6 rounded shadow-md max-w-lg">
  <%= form_with(model: [@taskable, @task], local: true, class: "space-y-4") do |form| %>
    
    <% if @task.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <strong class="font-bold">Please fix the following errors:</strong>
        <ul class="mt-2 list-disc list-inside">
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, class: "block font-semibold" %>
      <%= form.text_field :title, class: "form-control w-full p-2 border rounded" %>
    </div>

    <div>
      <%= form.label :due_date, class: "block font-semibold" %>
      <%= form.date_field :due_date, class: "form-control w-full p-2 border rounded" %>
    </div>

    <div>
      <%= form.label :status, class: "block font-semibold" %>
      <%= form.select :status, Task.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "form-control w-full p-2 border rounded" %>
    </div>

    <%= form.submit "Create Task", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  <% end %>
</div>
