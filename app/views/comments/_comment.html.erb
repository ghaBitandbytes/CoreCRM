<p class="text-sm text-gray-500">
  By <%= comment.user.email %>, <%= time_ago_in_words(comment.created_at) %> ago
  <% if defined?(local_user) && (comment.user == local_user || local_user&.admin?) %>
    <%= button_to "Delete", polymorphic_path([comment.commentable, comment]),
                  method: :delete,
                  form: { data: { turbo_confirm: "Are you sure you want to delete this comment?" } },
                  class: "text-red-600 hover:underline ml-2 bg-transparent border-none p-0" %>
  <% end %>
</p>
