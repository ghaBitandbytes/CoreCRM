<h1 class="text-xl font-bold mb-6">Lead Conversion Analytics</h1>

<div class="mb-6 bg-white p-4 rounded shadow">
  <h2 class="text-lg font-semibold mb-2">Monthly Leads Created</h2>
  <%= line_chart @monthly_leads_created,
        height: "300px",
        library: {
          title: { text: "Leads Created", fontSize: 18 },
          colors: ["#3B82F6"]
        } %>
</div>

<div class="mb-6 bg-white p-4 rounded shadow">
  <h2 class="text-lg font-semibold mb-2">Monthly Leads Converted</h2>
  <%= line_chart @monthly_leads_converted,
        height: "300px",
        library: {
          title: { text: "Leads Converted", fontSize: 18 },
          colors: ["#10B981"]
        } %>
</div>

<div class="mb-6 bg-white p-4 rounded shadow">
  <h2 class="text-lg font-semibold mb-2">Conversion Funnel</h2>
  <%= column_chart [
        ["Total Leads", Lead.count],
        ["Converted Leads", Lead.where.not(converted_at: nil).count]
      ],
      height: "300px",
      library: {
        title: { text: "Conversion Funnel", fontSize: 18 },
        colors: ["#F59E0B", "#22C55E"]
      } %>
</div>
