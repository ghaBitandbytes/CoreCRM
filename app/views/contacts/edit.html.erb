<h2>Edit Contact</h2>

<%= form_with(model: @contact, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= form.label :phone %>
    <%= form.telephone_field :phone, class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <%= form.submit "Update Contact", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", contact_path(@contact), class: "btn btn-secondary mt-2" %>
