<h2 class="text-xl font-bold mb-4">Edit Stage</h2>

<%= form_with model: @stage, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block font-medium" %>
    <%= form.text_field :name, class: "border p-2 rounded w-full" %>
  </div>

  <%= form.submit "Update Stage", class: "bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>
